<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaCalificaciones.Login">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Universidad Israel" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>

            <Entry x:Name="txtUsuario" Placeholder="Ingrese el Usuario"   />
            <Entry x:Name="txtClave"  Placeholder="Ingrese la Contraseña" IsPassword="True"/>

            <Button x:Name="btnIngreso" Text="Ingresar" Clicked="btnIngreso_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>